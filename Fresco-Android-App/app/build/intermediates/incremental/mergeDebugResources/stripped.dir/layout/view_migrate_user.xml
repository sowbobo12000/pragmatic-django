<?xml version="1.0" encoding="utf-8"?>

                                                           
                                                       

    

                                          

                 
                        
                                                                              
           

    <com.fresconews.fresco.v2.views.MaxHeightScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:maxHeight="520dp" android:tag="layout/view_migrate_user_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="280dp"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:text="@string/migrate_user_title"
                android:textColor="@color/black_87"
                android:textSize="20sp"
                android:tag="binding_1"             />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:tag="binding_2"        
                android:textSize="14sp"
                tools:text="@string/migrate_user_message_password"/>

            <!--========================FIELDS=====================================-->

            <!--USERNAME-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="26dp"
                android:orientation="vertical"
                android:tag="binding_3"                                               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    android:tag="binding_4"                  />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    android:tag="binding_5"           
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                        android:inputType="textFilter"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textSize="24sp"
                        android:tag="binding_6"             
                                                            />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!--EMAIL-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:orientation="vertical"
                android:tag="binding_7"                                            >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_address"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    android:tag="binding_8"                  />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="binding_9"        
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textEmailAddress"
                        android:maxLines="1"
                        android:textSize="24sp"
                        android:tag="binding_10"         
                                                            />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!--PASSWORD-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:tag="binding_11"                                              >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_a_password"
                    android:textColor="@color/black_54"
                    android:textSize="12sp"
                    android:tag="binding_12"                 />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="binding_13"          
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/verify_password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textPassword"
                        android:textSize="24sp"
                        android:tag="binding_14"            
                                                            />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <!--========================BUTTONS=====================================-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:background="@color/fresco_orange">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/log_out"
                    android:textSize="14sp"
                    android:tag="binding_15"            
                                                 
                    tools:background="@color/fresco_blue"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/done"
                    android:textSize="14sp"
                    android:tag="binding_16"            
                                               
                    tools:background="@color/fresco_green"/>

            </LinearLayout>

        </LinearLayout>

    </com.fresconews.fresco.v2.views.MaxHeightScrollView>

         