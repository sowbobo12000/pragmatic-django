<?xml version="1.0" encoding="utf-8"?>

                                                           
                                                       

    

                 
                        
                                                                                        
           

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" android:tag="layout/global_assignment_view_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:tag="binding_1"      
                android:textColor="@color/black_87"
                android:textSize="24sp"
                                                    
                tools:text="Assignment Title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:tag="binding_2"        
                android:textColor="@color/black_87"
                android:textSize="14sp"
                                                         
                tools:text="Assignment Caption"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_clock"
                    android:tint="#888888"/>

                <TextView
                    android:id="@+id/expire_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:tag="binding_3"                 
                    android:textColor="#8b000000"
                    android:textSize="14sp"
                    tools:text="Expiration TIme"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_alert"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/assignments_warning"
                    android:textColor="#8b000000"
                    android:textSize="14sp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/assignment_footer"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                app:layout_behavior="com.fresconews.fresco.ui.behavior.AssignmentToolbarBehavior">

                <Button
                    android:id="@+id/open_camera"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/open_camera"
                    android:textColor="@color/fresco_green"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:tag="binding_4"             
                                                     />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
         