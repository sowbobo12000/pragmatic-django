<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                       
                                                   

    

                                          

                 
                        
                                                                                                  
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/view_comments_list_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <View
            style="@style/HorizontalLine"
            android:paddingTop="6dp"
            android:tag="binding_1"                                                  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:id="@+id/comments_title_textview"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="@string/comments"
                android:textColor="@color/fresco_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                android:tag="binding_2"                                                  />

        </LinearLayout>

        <!--Show more comments button-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:tag="binding_3"                                                            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:tag="binding_4"                             
                android:textColor="@color/black_87"
                android:textSize="16sp"
                                                         />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/fresco_blue"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:tag="binding_5"                   
                android:textColor="@color/white"
                android:textSize="15sp"
                                                     
                                                       
                tools:text="@string/show_all"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/commentsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:tag="binding_6"                                                  
                                                    
            tools:layout_height="100dp"/>

    </LinearLayout>

         